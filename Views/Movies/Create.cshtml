@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add New</h1>

<h4>Clip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movies[0].Title" class="control-label"></label>
                <input asp-for="Movies[0].Title" class="form-control" />
                <span asp-validation-for="Movies[0].Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies[0].ReleaseDate" class="control-label"></label>
                <input asp-for="Movies[0].ReleaseDate" class="form-control" />
                <span asp-validation-for="Movies[0].ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies[0].Genre" class="control-label"></label>
                <select asp-for="Movies[0].Genre" asp-items="Model.Genres" class="form-control"></select>
                <span asp-validation-for="Movies[0].Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies[0].Rating" class="control-label"></label>
                <input asp-for="Movies[0].Rating" class="form-control" />
                <span asp-validation-for="Movies[0].Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies[0].Price" class="control-label"></label>
                <input asp-for="Movies[0].Price" class="form-control" />
                <span asp-validation-for="Movies[0].Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies[0].ImageUrl" class="control-label"></label>
                <input asp-for="Movies[0].ImageUrl" class="form-control" />
                <span asp-validation-for="Movies[0].ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="my-btn my-btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Collection</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
